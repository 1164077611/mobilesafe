<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:c="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.csx.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        c:m_title="自动更新设置"
        c:m_desc_off="自动更新关闭"
        c:m_desc_on="自动更新打开"/>


    <com.csx.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        c:m_desc_off="归属地显示已经关闭"
        c:m_desc_on="归属地显示已经开启"
        c:m_title="电话归属地显示设置" />

    <com.csx.mobilesafe.view.SettingItemClickView
        android:id="@+id/sic_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.csx.mobilesafe.view.SettingItemClickView
        android:id="@+id/sic_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>